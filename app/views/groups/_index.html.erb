<h2>Groups</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>introduction</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% groups.each do |group| %>
    <tr>
      <td style="width: 120px;"><%= image_tag group.get_group_image(100,100) %></td>
      <td><%= link_to group.name, group_path(group) %></td>
      <td><%= group.introduction %></td>
      <td>
        <i class="fas fa-users"></i> 
        <%= group.users.count %>
      </td>
      <td>
        <% if current_user.id == group.owner_id %>
          <%= link_to "Edit", edit_group_path(group), class: "btn btn-sm btn-success" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>