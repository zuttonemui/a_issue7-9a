<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Mail to <%= @group.name %>'s member</h2>
      <%= render 'layouts/errors', obj: @group %>  
      <%= form_with url: group_send_mail_path(@group), method: :get do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :mail_title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %></br>
          <%= f.text_area :mail_content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Send Mail", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>