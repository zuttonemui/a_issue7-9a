<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Create Group</h2>
      <%= render 'layouts/errors', obj: @group %>  
      <%= form_with model: @group, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :name, "Group name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :group_image, "Image" %></br>
          <%= f.file_field :group_image, accept: "image/jpeg"  %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
