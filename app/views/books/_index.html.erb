<h2>Books</h2>
<p>
  <%= link_to '新しい順', books_path(latest: "true") %> |
  <%= link_to '評価の高い順', books_path(star: "true") %> |
  <%= link_to 'いいね順', books_path(fav: "true") %>
</p>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
  <% books.each do |book| %>
    <tr>
      <td><%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(80,80) %><% end %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <td id="favorite-btn-<%= book.id %>"><%= render 'favorites/favorite_btn', book: book %></td>
      <td><%= render 'book_comments/counter', book: book %></td>
      <td>view: <%= book.read_counts.count %></td>
      <td><%= render 'star', book: book %></td>
    </tr>
  <% end %>
  </tbody>
</table>