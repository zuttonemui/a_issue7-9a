<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
  <% books.each do |book| %>
    <tr>
      <td><%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(80,80) %><% end %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <td>
        <% book.tags.each do |tag| %>
          <li style="list-style: none;"><%= link_to tag.name, search_path(content: tag.name, model: "tag", method: "perfect") %></li>
        <% end %>
      </td>
      <td id="favorite-btn-<%= book.id %>"><%= render 'favorites/favorite_btn', book: book %></td>
      <td><%= render 'book_comments/counter', book: book %></td>
      <td>view: <%= book.read_counts.count %></td>
      <td><%= render 'books/star', book: book %></td>
    </tr>
  <% end %>
  </tbody>
</table>